@RenderSection("scripts", false)

<script type="text/javascript">
    $(document).ready(function() {
        if ($.getUrlVar("review") != null) {
            var reviewMsg = decodeURIComponent($.getUrlVar("review"));
            if (reviewMsg.indexOf("Error") >= 0) {
                $("#ReviewMsg").html("<div class=\"alert alert-danger alert-dismissable\">" +
                    "<button type=\"button\" class=\"close\" " +
                    "data-dismiss=\"alert\" aria-hidden=\"true\">" +
                    "&times;" +
                    "</button>" + "<strong>" + reviewMsg + "</strong>" +
                    "</div>").fadeOut(4000);
            } else {
                $("#ReviewMsg").html("<div class=\"alert alert-success alert-dismissable\">" +
                    "<button type=\"button\" class=\"close\" " +
                    "data-dismiss=\"alert\" aria-hidden=\"true\">" +
                    "&times;" +
                    "</button>" + "<strong>" + reviewMsg + "</strong>" +
                    "</div>").fadeOut(4000);
            }


        }

    })
</script>


